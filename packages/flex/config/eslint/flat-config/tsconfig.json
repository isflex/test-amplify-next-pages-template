{
  "extends": "@flexiness/tsconfig/base.esm.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ES2022",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "eslint"],
    "paths": {
      "flexiness": ["../../types"],
    }
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext"
    }
  }
}
